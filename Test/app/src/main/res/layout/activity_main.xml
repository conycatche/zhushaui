<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="4"
    android:stretchColumns="3">
    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clickable="false"
        android:inputType="number"
        android:textSize="30dp"
        android:background="@android:color/transparent">
    </EditText>

    <TableRow>

        <Button
            android:id="@+id/cls"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:background="#D3D6D6"
            android:text="C"
            android:textColor="#03CDCD"
            android:textSize="20dp" />
        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:textSize="20dp"
            android:background="#D3D6D6"
            android:textColor="#03CDCD"
            android:layout_weight="1"
            android:text="/" />
        <Button
            android:id="@+id/mul"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:textSize="20dp"
            android:background="#D3D6D6"
            android:textColor="#03CDCD"
            android:layout_weight="1"
            android:text="*" />

        <Button
            android:id="@+id/del"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:background="#D3D6D6"
            android:text="←"
            android:textColor="#03CDCD"
            android:textSize="20dp" />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:textSize="20dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="7" />
        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:textSize="20dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="8" />
        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:textSize="20dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="9" />
        <Button
            android:id="@+id/sub"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:textSize="20dp"
            android:background="#D3D6D6"
            android:textColor="#03CDCD"
            android:layout_weight="1"
            android:text="-" />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:textSize="20dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="4" />
        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:textSize="20dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="5" />
        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:textSize="20dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="6" />
        <Button
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:textSize="20dp"
            android:background="#D3D6D6"
            android:textColor="#03CDCD"
            android:layout_weight="1"
            android:text="+" />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:textSize="20dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="1" />
        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:textSize="20dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="2" />
        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:textSize="20dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="3" />
        <Button
            android:id="@+id/sqrt"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:textSize="20dp"
            android:background="#D3D6D6"
            android:textColor="#03CDCD"
            android:layout_weight="1"
            android:text="√" />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/zeros"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:textSize="20dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="+/-" />
        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:textSize="20dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="0" />
        <Button
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:textSize="20dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_weight="1"
            android:text="." />

        <Button
            android:id="@+id/equals"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:background="#D3D6D6"
            android:text="="
            android:textColor="#03CDCD"
            android:textSize="20dp" />
    </TableRow>
</TableLayout>
